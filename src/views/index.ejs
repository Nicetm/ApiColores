<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header') %>
    <title>Api Colores</title>
</head>
<body>
    <%- include('partials/nav') %>
    <div class="container">
        <div class="row">
            <% colors.forEach(function(color) { %>
            <div class="col-3 p-2">
                <div class="card text-white" style="width: 17rem; background-color: <%= color.color %>">
                    <div class="card-header"><%= color.name %></div>
                    <div class="card-body">
                      <p class="card-title"><%= color.year %></p>
                      <h2 class="card-text text-center p-4"><a href="/view-color/<%= color.id %>"><%= color.color %></a></h2>
                      <p class="text-right"><%= color.pantone_value %></p>
                    </div>
                    <!--
                    <div class="card-footer">
                        <button class="btn btn-danger">Delete</button>
                    </div>
                    -->
                </div>
            </div>
            <% }) %>
        </div>
        <hr>
    </div>
</body>
</html>